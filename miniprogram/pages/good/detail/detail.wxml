<!--pages/good/detail/detail.wxml-->
<!-- 顶部导航 -->
<custom-top-bar isShowBack="true" title="详情"></custom-top-bar>

<!-- 商品大图 -->
<view class="show-good-big">
  <image class="img" src="/assets/images/floor-img.jpg" mode="aspectFill" />
</view>

<view class="good-info">
  <view class="price">
    <text class="discount-price">￥899</text>
    <text class="native-price">￥999</text>
  </view>
  <view class="food-detail-info">亲爱的/情人节新品情人节新品情人节新品情人节新品</view>
  <view class="other-info">用最温暖的最有情的心意，用最温暖的最有情的心意</view>

</view>

<!-- 商品详情图片展示 -->
<view class="good-show-detail">
  <image class="img" mode="widthFix" src="/assets/images/floor-img.jpg" />
  <image class="img" mode="widthFix" src="/assets/images/floor-img.jpg" />
  <image class="img" mode="widthFix" src="/assets/images/floor-img.jpg" />
</view>

<!-- 底部购物按钮 -->
<van-goods-action class="goods-action">
  <van-goods-action-icon icon="shop-o" text="主页" bind:tap="backToIndex"/>
  <van-goods-action-icon icon="chat-o" text="客服" dot open-type="contact" />
  <van-goods-action-icon icon="cart-o" text="购物车" info="5" bind:tap="goCart" />
  <van-goods-action-button text="加入购物车" type="warning" bind:tap="showCart" />
  <van-goods-action-button text="立即购买" bind:tap="showCart" />
</van-goods-action>

<!-- 底部面板弹窗 -->
<van-action-sheet show="{{ show }}"  bind:close="onClose">
  <view class="cart-info">
    <view class="header-cart">
      <image class="img" src="/assets/images/floor-img.jpg" mode="aspectFit"/>
      <view class="cart-info-good">
        <view class="title">亲爱的/情人节网红款/19枝</view>
        <view class="cart-detail">
          <text class="text">￥100</text>
          <van-stepper class="stepper" value="{{1}}" bind:change="onChange" />
        </view>
      </view>
    </view>
    <view class="bress">
      <view class="title">祝福语</view>
      <textarea  maxlength="500" class="bress-msg" value="{{bressInfo}}" placeholder="必填，写上您的祝福语，给心爱的他（她)送上你的祝福(请勿填写特殊符号或者表情符号)"/>
    </view>
    <van-button type="primary" custom-style="width:100%;border-radius:50rpx;">确定</van-button>
  </view>
  
</van-action-sheet>